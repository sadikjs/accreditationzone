              <% zonethree.forEach(card => { %>
                <option value="<%= card.value %>" <%= (data.zonethree === card.value) ? 'selected' : "" %>> <%= card.label %> </option>
            <% }) %>
              </select>
            </div>
            <div class="form-right">
