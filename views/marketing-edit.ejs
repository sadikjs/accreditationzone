  <div class="main-block">
      <h1>Update</h1>
      <form method="post"
      action="/update-marketing/<%=data._id %>">
        <hr>
        <div class="colums">
            <div class="form-left">
              <label id="icon" for="name"><i class="fas fa-envelope"></i></label>
              <input type="text" name="manualnumber" id="manualnumber" placeholder="MANUAl SL" value="<%=data.manualnumber %>" required/>
            </div>
            <div class="form-right">
              <label id="icon" for="name"><i class="fas fa-envelope"></i></label>
              <input type="text" name="fullname" id="fullname" placeholder="FULL NAME" value="<%= data.fullname %>" required/>
            </div>
            <div class="form-left">
              <label id="icon" for="name"><i class="fas fa-user"></i></label>
              <input type="text" name="designation" id="designation" placeholder="DESIGNATION" value="<%= data.designation %>"/>
            </div>
            <div class="form-right">
              <label id="icon" for="name"><i class="fas fa-user"></i></label>
              <input type="text" name="organization" id="organizationname" placeholder="ORGANIZATION" value="<%=data.organization %>"/>
            </div>
            <div class="form-left">
              <label id="icon" for="name"><i class="fas fa-unlock-alt"></i></label>
              <input type="text" name="nidno" id="nidpassport" placeholder="NID/PASSPORT/BIRTH ID" value="<%= data.nidno %>" required/>
            </div>
            <div class="form-right">
              <label id="icon" for="name"><i class="fas fa-unlock-alt"></i></label>
              <input type="text" name="phone" id="nidpassport" placeholder="PHONE NUMBER" value="<%= data.phone %>" required/>
            </div>
            <div class="form-left">
              <label id="icon" for="name">CARD NAME: <!-- <i class="fas fa-envelope"></i> --></label> 
              <select id="cardname" name="cardname">
            <% cardname.forEach(card => { %>
                <option value="<%= card.value %>" <%= (data.cardname === card.value) ? 'selected' : "" %>> <%= card.label %> </option>
            <% }) %>
              </select>
            </div>
            <div class="form-right">
              <label id="icon" for="name">VENUES: <!-- <i class="fas fa-envelope"></i> --></label> 
              <select id="cars" name="vanue">
              <% vanue.forEach(card => { %>
                <option value="<%= card.value %>" <%= (data.vanue === card.value) ? 'selected' : "" %>> <%= card.label %> </option>
            <% }) %>
              </select>
            </div>
            <div class="form-left">
              <label id="icon" for="name">ZONE ONE: <!-- <i class="fas fa-envelope"></i> --></label> 
