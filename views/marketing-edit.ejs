  <script src="./js/toastify.js"></script>
  <script>
    const deleteToast = Toastify({
      text: "You are being logout....",
      duration: 1000,
    })
    function logout() {
      fetch("/", {
        method: "DELETE"

      })
      deleteToast.showToast();

      setTimeout(() => {
        window.location.replace("/");
      }, 1000)
    }
  </script>
